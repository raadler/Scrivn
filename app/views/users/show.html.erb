<h1><%= @user.username %>'s Inks</h1>

<div class="row">
<% @user_inks.each do |ink| %>
  <div class="small-3 columns">
    <div class="ink-details">
      <%= link_to "#{ink.ink.color_name}", user_user_ink_path(@user, ink.id)%>
      <% if @user == current_user %>
        <p><%= link_to "Delete", user_user_ink_path(@user, ink.id), method: :delete%></p>
      <% end %>
  </div>
</div>
<% end %>
</div>
