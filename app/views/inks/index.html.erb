<body>
  <% if user_signed_in? %>
    <h4 class="add-ink"><%= link_to "Add New Ink", new_ink_path %></h4>
  <% end %>

  <h1 class="title">Inks</h1>
  <div class="row">
    <% @inks.each do |ink| %>
      <div class="small-12 medium-3 columns">
        <div class="ink-details">
          <p class="name"><%= link_to "#{ink.color_name}", ink_path(ink) %></p>
          <% if !ink.ink_pic.blank? %>
            <div class="picture-small"><%= image_tag ink.ink_pic %></div>
            <p><%= ink.manufacturer %></p>
          <% else %>
            <p><%= ink.manufacturer %></p>
            <p><%= ink.line %></p>
            <p><%= ink.description %></p>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

</body>
